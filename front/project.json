{
  "name": "front",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "front/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "dependsOn": ["^build", "generators"],
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/front"
      },
      "configurations": {
        "development": {
          "mode": "development",
          "skipTypeCheck": true
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "dependsOn": ["generators"],
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "front:build",
        "port": 3000
      },
      "configurations": {
        "development": {
          "buildTarget": "front:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "front:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "front:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "front:build:development"
        },
        "production": {
          "buildTarget": "front:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "dependsOn": ["generators"],
      "options": {
        "passWithNoTests": true,
        "jestConfig": "front/jest.config.js"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["front/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "generators": {
      "command": "npm --prefix front run generate"
    }
  },
  "tags": []
}
