{
  "name": "front",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "front/src",
  "projectType": "application",
  "targets": {
    "dsfr": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd front && copy-dsfr-to-public && only-include-used-icons"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "dependsOn": ["^build", "dsfr", "generate-tw"],
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/front"
      },
      "configurations": {
        "development": {
          "mode": "development",
          "skipTypeCheck": true
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "dependsOn": ["^build"],
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "front:build",
        "port": 3000,
        "host": "0.0.0.0"
      },
      "configurations": {
        "development": {
          "buildTarget": "front:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "front:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "front:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "front:build:development"
        },
        "production": {
          "buildTarget": "front:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "dependsOn": ["^build", "generate-tw"],
      "options": {
        "passWithNoTests": true,
        "jestConfig": "front/jest.config.js"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["front/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "generate-tw": {
      "command": "tailwindcss build front/src/tailwind.css -o front/src/generated/css/tailwind.generated.css"
    }
  },
  "tags": []
}
