{
  "name": "back",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "back/src",
  "projectType": "library",
  "targets": {
    "types": {
      "command": "tsc -p back/tsconfig.lib.json --noEmit"
    },
    "reindex-all-bsds-bulk": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx --tsconfig back/tsconfig.lib.json back/src/scripts/bin/reindexAllInBulk.ts"
      },
      "configurations": {
        "integration": {}
      }
    },
    "codegen": {
      "inputs": ["{projectRoot}/**/*.graphql"],
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "graphql-codegen --config back/codegen.yml"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "configurations": {
        "fix": {
          "fix": true
        }
      }
    },
    "integration-setup": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prisma db push",
          "npm --prefix back run reindex-all-bsds-bulk"
        ],
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "dependsOn": [
        "codegen",
        {
          "projects": ["@td/prisma"],
          "target": "generate"
        }
      ],
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "back/jest.config.ts"
      },
      "configurations": {
        "integration": {
          "jestConfig": "back/jest.config.integration.ts",
          "runInBand": true,
          "forceExit": true,
          "codeCoverage": false
        }
      }
    },
    "sirenify-bulk": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx --tsconfig back/tsconfig.lib.json back/src/scripts/bin/bulkSirenify.ts"
      },
      "configurations": {
        "integration": {}
      }
    }
  },
  "tags": []
}
