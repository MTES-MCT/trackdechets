enum BsdasriStatus {
  INITIAL
  SIGNED_BY_PRODUCER
  SENT
  RECEIVED
  PROCESSED
  REFUSED
}

enum BsdasriEmitterType {
  PRODUCER
  COLLECTOR
}

enum BsdasriType {
  SIMPLE
  GROUPING
  SYNTHESIS
}

model Bsdasri {
